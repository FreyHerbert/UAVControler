<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16192b"
    tools:context="top.lightblog.uavcontroler.StartActivity">

    <RelativeLayout
        android:id="@+id/uav_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_body"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/uav"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha="0"/>


        <ImageView
            android:id="@+id/img_airscerw_aboveL"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/img_body"
            android:layout_above="@+id/img_body"
            android:translationX="-60dp"
            android:translationY="90dp"
            android:src="@drawable/airscerw"
            />


        <ImageView
            android:id="@+id/img_airscerw_aboveR"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/airscerw"
            android:layout_above="@+id/img_body"
            android:layout_alignRight="@id/img_body"
            android:translationX="60dp"
            android:translationY="90dp"
            />


        <ImageView
            android:id="@+id/img_airscerw_belowR"
            android:layout_alignRight="@+id/img_body"
            android:layout_below="@+id/img_body"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:translationX="60dp"
            android:translationY="-90dp"
            android:src="@drawable/airscerw"/>


        <ImageView
            android:id="@+id/img_airscerw_belowL"
            android:layout_below="@+id/img_body"
            android:layout_alignLeft="@+id/img_body"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:translationX="-60dp"
            android:translationY="-90dp"
            android:src="@drawable/airscerw"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="-100dp"
        android:textColor="#cccccc"
        android:textSize="25dp"
        android:text="Welcome to UAV controller"
        android:alpha="0"/>


</RelativeLayout>
